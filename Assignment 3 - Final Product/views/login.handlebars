<div class="col-sm-5 form-container col-centered">
    <div class="col-sm-12 loginMessage">
        Please sign in to be able to upload an image.
    </div>
    <br/>
    <form name="login" id="loginForm" class="form-horizontal" enctype="multipart/form-data" action="" method="POST" autocomplete="on">
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" id="email" name="email" class="form-control" placeholder="">
            </div>
        </div>
        <div class="form-group">
            <label for="userpass" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" id="userpass" name="userpass" class="form-control">
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="pull-right">
                <button type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>

<div class="col-sm-12 errormessage">
    {{error}}
</div>