<div class="col-sm-11 form-container">
    <form class="form-horizontal" enctype="multipart/form-data" action="/upload" method="POST">
        <div class="form-group">
            <label for="utitle" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input type="text" id="utitle" name="title" class="form-control" placeholder="">
            </div>
        </div>
        <div class="form-group">
            <label for="udescription" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                <textarea id="udescription" name="description" class="form-control" rows="3"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="file" class="col-sm-2 control-label">Image File</label>
            <div class="col-sm-10">
                <input type="file" id="file" name="file">
                <p class="help-block">Upload an awesome image of your making!</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="pull-right">
                    <button type="submit">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>
